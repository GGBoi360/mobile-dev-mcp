{
  "name": "mobile-dev",
  "version": "0.3.0",
  "displayName": "Mobile Dev MCP",
  "description": "Read-only MCP server for mobile debugging - screenshots, logs, UI inspection for Android and iOS",
  "author": "GGBoi360",
  "license": "MIT",
  "repository": "https://github.com/GGBoi360/mobile-dev-mcp",
  "keywords": [
    "mobile",
    "react-native",
    "expo",
    "android",
    "ios",
    "adb",
    "metro",
    "debugging"
  ],
  "mcp": {
    "command": "node",
    "args": ["dist/index.js"],
    "cwd": "."
  },
  "requirements": {
    "node": ">=18.0.0",
    "external": [
      {
        "name": "adb",
        "description": "Android Debug Bridge (part of Android SDK Platform Tools)",
        "installUrl": "https://developer.android.com/tools/releases/platform-tools",
        "optional": false
      }
    ]
  }
}
